 --log-flush-frequency=<%= scope['kubernetes::node::kube_proxy::log_flush_frequency'] -%>
 --masquerade-all=<%= scope['kubernetes::node::kube_proxy::masquerade_all'] -%>
 --master=<%= scope['kubernetes::node::kube_proxy::master'] -%>
